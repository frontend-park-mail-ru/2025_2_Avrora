{
  "name": "homa",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run compile-hbs && npm run build-css && vite",
    "build": "npm run compile-hbs && npm run build-css-prod && vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "preview": "vite preview --port 5000",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:stop": "docker-compose -f docker-compose.dev.yml -f docker-compose.prod.yml down",
    "docker:clean": "docker system prune -f",
    "start": "node server.js",
    "start:dev": "cross-env NODE_ENV=development node server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "lint": "eslint . --color",
    "compile-hbs": "node compile-templates.js",
    "build-css": "sass src/styles/index.scss src/styles/index.css",
    "build-css-prod": "sass src/styles/index.scss src/styles/index.css --style=compressed"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "core-js": "^3.46.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "es6-promise": "^4.2.8",
    "express": "^4.21.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "regenerator-runtime": "^0.14.1",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-loader": "^10.0.0",
    "cross-env": "^10.1.0",
    "esbuild": "^0.25.11",
    "eslint": "^9.36.0",
    "jsdoc": "^4.0.4",
    "sass": "^1.93.2",
    "terser": "^5.28.1",
    "vite": "^7.1.12",
    "vite-plugin-compression": "^0.5.1"
  }
}
