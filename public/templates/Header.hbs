<div class="header__container">
    <div class="header__logo">
        <a href="/" class="header__logo-link">
            <img src="../../images/logo.png" class="header__logo-image" alt="Логотип">
            <span class="header__logo-title">Homa</span>
        </a>
    </div>
    <div class="header__menu">
        {{#if isAuthenticated}}
            <button type="button" class="header__menu-btn header__menu-btn--like">
                <img src="../../images/menu__like.png" alt="Избранное">
            </button>
            <button type="button" class="header__menu-btn header__menu-btn--add-object">
                + Объект
            </button>
            <button type="button" class="header__menu-btn header__menu-btn--user">
                <img src="{{user.avatar}}" alt="Профиль" onerror="this.src='../../images/user.png'">
            </button>
        {{else}}
            {{#unless isRegisterPage}}
            <button type="button" class="header__menu-btn header__menu-btn--register">
                Регистрация
            </button>
            {{/unless}}
            {{#unless isLoginPage}}
            <button type="button" class="header__menu-btn header__menu-btn--login">
                Войти
            </button>
            {{/unless}}
        {{/if}}
    </div>
</div>